#!/bin/bash
# Skript kontrollib etteantud arvu paarisust või paaritust.

# Kontrolli, kas argumentide arv on täpselt 1
if [ $# -ne 1 ]; then
    echo "Käivita see skript koos arvuga, mille paarsust soovid kontrollida. Näiteks: $0 3"
    exit 1
fi

# Vii argument muutujasse
arv=$1

# Kontrolli, kas argument on täisarv (valikuline lisa)
if ! [[ $arv =~ ^-?[0-9]+$ ]]; then
    echo "Palun sisesta täisarv!"
    exit 1
fi

# Arvuta jääk
jaak=$(( arv % 2 ))

# Kontrolli ja väljasta tulemus
if [ $jaak -eq 0 ]; then
    echo "Antud arv on paaris"
else
    echo "Antud arv on paaritu"
fi

